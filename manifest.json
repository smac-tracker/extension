{
    "name": "Extension",
    "version": "1.0",
    "description": "Testing",
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdn.jsdelivr.net https://stackpath.bootstrapcdn.com https://kit.fontawesome.com; object-src 'self'",
    "permissions": ["storage", "tabs"],
    "background": {
        "scripts": ["app/background.js"],
        "persistent": false
    },
    "browser_action": { 
        "default_popup": "views/popup.html",
        "default_title": "Social Media Tracking"
    },
    "options_page": "views/activity.html",
    "icons": {
        "16": "logo.png",
        "48": "logo.png"
    }
}