{
    "name": "Extension",
    "version": "1.0",
    "description": "Testing",
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net https://stackpath.bootstrapcdn.com; object-src 'self'",
    "permissions": ["storage", "tabs"],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": { 
        "default_popup": "popup.html",
        "default_title": "bear"
    },
    "options_page": "activity.html"
}